{% extends 'base.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                {% for new in news %}
                <div>
                    <div class="raw">
                        <div class="col col-expand col-lg-9">
                            <p>{{ new.title }}</p>
                        </div>
                        <div class="btn-block">
                            <a class="default btn btn-success" href="/news/{{ new.id }}">
                                Перейти в новость
                            </a>
                        </div><br>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

